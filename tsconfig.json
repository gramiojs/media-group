{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ES2022",
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src"]
}
